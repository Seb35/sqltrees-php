{
	"require": {
		"php": ">=7.3"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0"
	},
	"autoload": {
		"psr-4": {
			"SQLTrees\\": "src/"
		},
		"files": [
			"src/functions.php"
		]
	},
	"scripts": {
